<ul class="works__list">
{% for work in works | reverse %}
  <li class="work__item">
    <article class="work__preview">
      <h2><a href="works/{{ work.name | slugify }}/">{{ work.data.title }}</a></h2>
      {% if work.filename %}
      <a href="{{ work.name | slugify }}/">
        {% image {src: work.filename, alt: "orugregwg", className: "image", widths: [300, 600] } %}
      </a>
      {% endif %}
      <p class="work__item__title">{{ work.name }}</p>
      <p class="work__item__details">{{ work.year }}, {{ work.size }}</p>
      <small>
        <a class="category" href="/works/{{ work.data.category }}">{{ work.data.category }}</a>
      </small>
    </article>
  </li>
{% endfor %}
</ul>